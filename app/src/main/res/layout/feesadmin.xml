<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <!--<data>-->
        <!--<variable-->
            <!--name="fees"-->
            <!--type="edutracker.laqshya.com.edutracker.adapter.FeesAdapterAdmin.FeedItem"/>-->
    <!--</data>-->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp">

        <RelativeLayout
            android:id="@+id/feesadminstatus_relative"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff">

            <LinearLayout
                android:id="@+id/linearLayout_adminfee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="bottom|center|start"
                android:layout_marginLeft="16.0dp"
                android:layout_marginRight="16.0dp"
                android:layout_marginTop="26.0dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linear0_adminfee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center|start">




                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/student_counsel_adminfee_display"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:background="#b6f5f5f5"
                            android:gravity="right"
                            android:paddingBottom="2.0dp"
                            android:paddingLeft="5.0dp"
                            android:paddingRight="5.0dp"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:textColor="#ea5127" />

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear1_adminfee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">


                    <TextView
                        android:id="@+id/title_name_adminfee_display"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="1dp"
                        android:paddingRight="1dp"
                        android:paddingStart="1dp"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:textColor="#ea5127" />

                    <TextView
                        android:id="@+id/title_course_adminfee_divide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:textColor="#ea5127"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/title_course_adminfee_display"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="2dp"
                        android:paddingLeft="2dp"
                        android:paddingStart="2dp"

                        android:textAppearance="?android:textAppearanceLarge"
                        android:textColor="#ea5127"
                        android:textSize="15sp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear2_adminfee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2.0dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/student_adminfee_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="Mobile : "
                        android:textColor="#ea5127"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/student_mobile_adminfee_display"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingStart="10dp"

                        android:textColor="#000000"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear3_adminfee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2.0dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/student_email_adminfee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="Email : "
                        android:textColor="#ea5127"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/student_email_adminfee_display"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:paddingEnd="10dp"
                        android:paddingLeft="10dp"
                        android:paddingStart="10dp"

                        android:textColor="#000000"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear4_adminfee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linear3"
                    android:layout_marginTop="10.0dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/student_adminfee_pendingfees"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="PendingAmt : "
                        android:textColor="#ea5127"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/student_adminfee_pendingfees_display"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"

                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/student_adminfee_nextinstallment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:maxLines="1"
                        android:text="Due On : "
                        android:textColor="#ea5127"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/student_nextinstallment_adminfee_display"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"

                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>
</layout>
