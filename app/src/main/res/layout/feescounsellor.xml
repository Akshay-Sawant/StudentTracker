<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <!--<data>-->

        <!--<variable-->
            <!--name="feeditems"-->
            <!--type="edutracker.laqshya.com.edutracker.adapter.FeesAdapterCousellorInfo.FeedItem" />-->
    <!--</data>-->

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/white">

            <LinearLayout
                android:id="@+id/linearLayout_adminfee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="bottom|center|start"
                android:layout_marginLeft="16.0dp"
                android:layout_marginRight="16.0dp"
                android:layout_marginTop="26.0dp"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/linear1_adminfee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">


                    <TextView
                        android:id="@+id/title_name_adminfee_display"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="1dp"
                        android:layout_weight="0.5"
                        android:paddingRight="1dp"

                        android:textAppearance="?android:textAppearanceLarge"
                        android:textColor="#ea5127" />
                    <TextView
                        android:id="@+id/title_course_adminfee_display"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="0.5"

                        android:textAppearance="?android:textAppearanceLarge"
                        android:textColor="#ea5127"
                        android:textSize="15sp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear2_adminfee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2.0dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/student_adminfee_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:text="Mobile : "
                        android:textColor="#ea5127"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/student_mobile_adminfee_display"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:paddingLeft="10dp"

                        android:textColor="#000000"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear3_adminfee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2.0dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/student_email_adminfee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="Email :"
                        android:textColor="#ea5127"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/student_email_adminfee_display"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:paddingLeft="5dp"

                        android:textColor="#000000"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear4_adminfee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/student_adminfee_pendingfees"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="Pending fees:"
                        android:textColor="#ea5127"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/student_adminfee_pendingfees_display"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                      
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/student_adminfee_nextinstallment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:maxLines="1"
                        android:text="Due: "
                        android:textColor="#ea5127"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/student_nextinstallment_adminfee_display"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"

                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>
</layout>
